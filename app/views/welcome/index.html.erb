<% yield %>

<div class="search">
  <%= form_tag(root_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
</div>

<% end %>

<div class="flex-table">
    <% @posts.each do |post| %>
     <%= div_for post, :class => "large_rowBox" do %>
        <div class="post-item">
          <div class="post-image">
            <%= image_tag(post.image_url, width:300, height:200) %>
          </div>
          <div class="post-text">
            <div class="post-title">
              <%= post.title %>
            </div>
            <div class="post-author">
                <span>
                  Last Updated on <%= post.updated_at.strftime("%b %e") %>
                </span>
                  by <%= post.user.name %>
            </div>
            <div class="post-body">
              <p>
                <%= post.body %>...
              </p>
            </div>
            <div class="read-more">
              <p>
              </p>
            <span>
              <%= image_tag(post.tag+".png") %>
              <%= link_to 'Read More', post %>
            </span>
            </div>
          <!--end post text-->
          </div>
          <!--end post item-->
        </div>
      <% end %>
      <!--end rowbox-->
    <% end %>
  </div>
 